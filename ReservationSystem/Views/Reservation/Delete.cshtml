@model ReservationSystem.Models.Reservation

<h2 class="my-4">Eliminar Reserva</h2>

<div class="alert alert-danger">
    <strong>!Advertencia!</strong>
    Está a punto de eliminar esta reserva. Esta acción no se puede deshacer.
</div>

<form method="post" action="@Url.Action("Delete", "Reservation", new { id = Model.Id})">
    <div>
        <div class="form-group">
            <label><strong>Fecha de Reserva:</strong></label>
            <p>@Model.ReservaDate.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
        <div class="form-group">
            <label><strong>Cliente:</strong></label>
            <p>@Model.ReservedBy</p>
        </div>
        <div class="form-group">
            <label><strong>Duración:</strong></label>
            <p>@Model.Duration</p>
        </div>
        <div class="form-group">
            <label><strong>Sala:</strong></label>
            <p>@Model.Room.Name</p>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Eliminar Reserva</button>
            <a href="@Url.Action("Index", "Reservation")" class="btn btn-secondary">
               Cancelar
            </a>
        </div>
    </div>

</form>