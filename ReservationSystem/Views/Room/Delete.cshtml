@model ReservationSystem.Models.Room

<h2 class="my-4">Eliminar Sala</h2>

<div class="alert alert-danger">
    <strong>!Advertencia!</strong>
    Está a punto de eliminar esta sala. Esta acción no se puede deshacer.
</div>

<form method="post" action="@Url.Action("DeleteConfirmed", "Room", new { id = Model.Id})">
    <div>
        <div class="form-group">
            <label><strong>Nombre de la sala:</strong></label>
            <p>@Model.Name</p>
        </div>
        <div class="form-group">
            <label><strong>Disponibilidad:</strong></label>
            <p>@Model.Availability</p>
        </div>
        <div class="form-group">
            <label><strong>Capacidad:</strong></label>
            <p>@Model.Capacity</p>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Eliminar Sala</button>
            <a href="@Url.Action("Index", "Room")" class="btn btn-secondary">
                Cancelar
            </a>
        </div>
    </div>

</form>